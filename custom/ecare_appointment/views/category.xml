<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Explicit Tree View -->
        <record id="ec_category_tree_view" model="ir.ui.view">
            <field name="name">category.tree.view</field>
            <field name="model">ec.slot.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="order" widget="handle"/>
                    <field name="parent_category_id"/>
                    <field name="name"
                           string="Secondary Category"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Explicit Form View -->
        <record id="ec_category_form_view" model="ir.ui.view">
            <field name="name">category.form.view</field>
            <field name="model">ec.slot.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"
                                       string="Secondary Category"
                                       attrs="{'readonly': [('name', '!=', False), ('id', '!=', False)], 'force_save': True}"/>

                                <field name="parent_category_id"
                                       required="True"
                                />

                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Explicit Action -->
        <record id="ec_category_action" model="ir.actions.act_window">
            <field name="name">Secondary Category</field>
            <field name="res_model">ec.slot.category</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('parent_category_id', '!=', False)]</field>
        </record>

        <!-- Explicit Tree Action for view -->
        <record id="ec_category_tree_view_action" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ec_category_tree_view"/>
            <field name="act_window_id" ref="ec_category_action"/>
        </record>

        <!-- Explicit Form Action for view -->
        <record id="ec_category_form_view_action" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="ec_category_form_view"/>
            <field name="act_window_id" ref="ec_category_action"/>
        </record>

        <!-- Category Menu -->
        <menuitem id="configuration_category_menu"
                  name="Secondary Category"
                  parent="ec_main_menu_categories"
                  sequence="3000"
                  action="ec_category_action"/>


    </data>
</odoo>