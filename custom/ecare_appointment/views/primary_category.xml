<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Explicit Tree View -->
        <record id="primary_category_tree_view" model="ir.ui.view">
            <field name="name">category.tree.view</field>
            <field name="model">ec.slot.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="order"
                           widget="handle"/>

                    <field name="name"/>
                    <field name="active"/>
                    <!--                    <field name="sub_categories" widget="many2many_tags"/>-->
                </tree>
            </field>
        </record>

        <!-- Explicit Form View -->
        <record id="primary_category_form_view" model="ir.ui.view">
            <field name="name">category.form.view</field>
            <field name="model">ec.slot.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"
                                       attrs="{'readonly': [('name', '!=', False), ('id', '!=', False)], 'force_save': True}"/>
                                <field name="active"/>

                                <!--                                <field name="consultation_ids"-->
                                <!--                                       widget="many2many_tags"-->
                                <!--                                />-->
                            </group>
                        </group>
                        <!--                            <group><field name="sub_categories" widget="many2many_tags"/></group>-->

                        <!--                        <label for="sub_categories" string="Sub Categories"/>-->

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Explicit Action for Primary Categories only domain is applied here -->
        <record id="primary_category_action" model="ir.actions.act_window">
            <field name="name">Primary Category</field>
            <field name="res_model">ec.slot.category</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('parent_category_id', '=', False)]</field>
        </record>

        <record id="primary_category_tree_view_action" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="primary_category_tree_view"/>
            <field name="act_window_id" ref="primary_category_action"/>
        </record>

        <record id="primary_category_form_view_action" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="primary_category_form_view"/>
            <field name="act_window_id" ref="primary_category_action"/>
        </record>

        <!-- Primary Category Menu -->
        <menuitem id="primary_configuration_category_menu"
                  name="Primary Category"
                  parent="ec_main_menu_categories"
                  sequence="2000"
                  action="primary_category_action"/>

    </data>
</odoo>