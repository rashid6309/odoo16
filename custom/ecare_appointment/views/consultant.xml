<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="res_consultant_tree_view" model="ir.ui.view">
            <field name="name">res.consultant.tree.view</field>
            <field name="model">res.consultant</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="res_consultant_action" model="ir.actions.act_window">
            <field name="name">Staff</field>
            <field name="res_model">res.consultant</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
        </record>

        <menuitem
            id="res_consultant_menu"
            name="Staff"
            action="res_consultant_action"
            parent="ec_main_configuration"
            sequence="4500"/>

    </data>
</odoo>