<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Explicit search view -->

        <record id="sub_category_search_view" model="ir.ui.view">
            <field name="name">ec.slot.sub.category.view.search</field>
            <field name="model">ec.slot.sub.category</field>
            <field name="arch" type="xml">
                <search string="Search Categories">
                    <field name="name"/>
                    <field name="description"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Sub Category -->

        <record id="sub_category_tree_view" model="ir.ui.view">
            <field name="name">sub_category.tree.view</field>
            <field name="model">ec.slot.sub.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="order" widget="handle"/>

                    <field name="name"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="sub_category_form_view" model="ir.ui.view">
            <field name="name">sub.category.form.view</field>
            <field name="model">ec.slot.sub.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" attrs="{'readonly': [('name', '!=', False), ('id', '!=', False)], 'force_save': True}"/>
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Explicit Action -->
        <record id="sub_category_action" model="ir.actions.act_window">
            <field name="name">Tertiary Category</field>
            <field name="res_model">ec.slot.sub.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="configuration_sub_category_menu"
                  name="Tertiary Category"
                  parent="ec_main_menu_categories"
                  sequence="4000"
                  action="sub_category_action"/>

    </data>
</odoo>