<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="slot_category_search_view" model="ir.ui.view">
            <field name="name">slot.category.view.search</field>
            <field name="model">ec.slot.category</field>
            <field name="arch" type="xml">
                <search string="Search Categories">
                    <field name="name"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

    </data>
</odoo>