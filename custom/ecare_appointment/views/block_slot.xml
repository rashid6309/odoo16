<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Feature: It is blocking of a slot in each day in the specific date-time -->

        <!-- Explicit search view -->

        <record id="category_block_search_view" model="ir.ui.view">
            <field name="name">category.block.view.search</field>
            <field name="model">ec.block.slot</field>
            <field name="arch" type="xml">
                <search string="Search Categories">
                    <field name="category_id"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Present" name="present" domain="['|', ('end_date', '=', False),
                    ('end_date', '&gt;', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Past" name="past" domain="[('end_date', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                </search>
            </field>
        </record>

        <!-- Tree view -->
        <record id="category_block_tree_view" model="ir.ui.view">
            <field name="name">category.block.tree.view</field>
            <field name="model">ec.block.slot</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="category_id"
                           options="{'no_create': True,
                           'no_quick_create': True}"
                    />
                    <field name="active"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="active_time"/>
                    <field name="to_time"/>
                </tree>
            </field>
        </record>

        <!-- Explicit Action -->
        <record id="category_block_action" model="ir.actions.act_window">
            <field name="name">Block Categories</field>
            <field name="res_model">ec.block.slot</field>
            <field name="view_mode">tree</field>
            <field name="context">{'search_default_present': True}</field>
        </record>

        <!-- Menu item -->
        <menuitem
            id="category_block_action_menu"
            name="Block Slots"
            action="category_block_action"
            parent="ec_main_configuration"
            sequence="4250"
            />

    </data>
</odoo>