<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Form view -->
        <record id="third_party_api_form_view" model="ir.ui.view">
            <field name="name">third.party.form.view</field>
            <field name="model">third.party.api.log</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="url"/>
                            <field name="payload"/>
                            <field name="response"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="third_party_api_tree_view" model="ir.ui.view">
            <field name="name">third.party.tree.view</field>
            <field name="model">third.party.api.log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="create_date"/>
                    <field name="name"/>
                    <field name="url"/>
                    <field name="payload"/>
                    <field name="response"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="third_party_api_log_action" model="ir.actions.act_window">
            <field name="name">Third Party Logs</field>
            <field name="res_model">third.party.api.log</field>
            <field name="target">current</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
