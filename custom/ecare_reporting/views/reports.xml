<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ec_slot_reporting_form" model="ir.ui.view">
            <field name="name">ec.slot.reporting.form</field>
            <field name="model">ec.slot.reporting</field>
            <field name="arch" type="xml">
                <form string="Report">
                    <header>
                            <button type="object"
                            name="print_slot_report"
                            class="btn-primary"
                            string="Print" target="current"/>
                    </header>
                    <sheet>
                        <group string="Duration" style="width:50%;">
                            <field name="start_datetime"/>
                            <field name="end_datetime"/>
                        </group>
                    </sheet>
                    <footer></footer>
                </form>
            </field>
        </record>

        <record id="ec_slot_reporting_report_action" model="ir.actions.act_window">
            <field name="name">Reporting</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ec.slot.reporting</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

    </data>

</odoo>