<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="account_move_line_tree_report_view" model="ir.ui.view">
            <field name="name">account.move.line.tree.report.view</field>
            <field name="model">report.account.move.line</field>
            <field name="arch" type="xml">
                <tree string="Services" create="False">
                    <field name="product_template_id"/>
                    <field name="service_type"/>
                    <field name="net_amount"/>
                    <field name="discount"/>
                    <field name="refund"/>
                    <field name="balance"/>
                </tree>
            </field>
        </record>

        <!-- Explicit View -->

        <record id="account_move_line_pivot_report_view" model="ir.ui.view">
            <field name="name">account.move.line.services.report.view</field>
            <field name="model">report.account.move.line</field>
            <field name="arch" type="xml">
                    <pivot string="Services">
                        <field name="create_date" type="row"/>
                        <field name="service_type" type="row"/>
                        <field name="product_template_id" type="row"/>
                        <field name="net_amount" type="measure"/>
                        <field name="discount" type="measure"/>
                        <field name="refund" type="measure"/>
                        <field name="balance" type="measure"/>
                    </pivot>
            </field>
        </record>

        <!-- Explicit actions -->

        <record id="report_account_move_line_report_action" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="res_model">report.account.move.line</field>
            <field name="view_mode">pivot,tree</field>
        </record>


        <record id="account_move_line_pivot_report_action" model="ir.actions.act_window.view">
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="account_move_line_pivot_report_view"/>
            <field name="act_window_id" ref="report_account_move_line_report_action"/>
        </record>

        <record id="account_move_line_tree_report_action" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account_move_line_tree_report_view"/>
            <field name="act_window_id" ref="report_account_move_line_report_action"/>
        </record>

    </data>
</odoo>