<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="account_move_line_tree_report_view" model="ir.ui.view">
            <field name="name">account.move.line.tree.report.view</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree string="Services" create="False" editable="bottom">
                    <field name="create_date" readonly="1"/>
                    <field name="product_id" readonly="1"/>
                    <field name="price_subtotal" readonly="1"/>
                </tree>
            </field>
        </record>

        <!-- Explicit View -->

        <record id="account_move_line_pivot_report_view" model="ir.ui.view">
            <field name="name">account.move.line.services.report.view</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                    <pivot string="Services">
                        <field name="date" type="row"/>
                        <field name="product_id" type="row"/>
                        <field name="inverse_balance" type="measure"/>
                    </pivot>
            </field>
        </record>

        <!-- Explicit actions -->

        <record id="account_move_line_report_action" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">pivot,tree</field>
            <field name="domain">[('product_id', '!=', False),
                ('parent_state', '=', 'posted'),
                ('move_id.payment_state', '=', 'paid')]</field>
        </record>


        <record id="account_move_line_pivot_report_action" model="ir.actions.act_window.view">
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="account_move_line_pivot_report_view"/>
            <field name="act_window_id" ref="account_move_line_report_action"/>
        </record>

        <record id="account_move_line_tree_report_action" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account_move_line_tree_report_view"/>
            <field name="act_window_id" ref="account_move_line_report_action"/>
        </record>

    </data>
</odoo>