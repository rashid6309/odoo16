<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="ec_medical_patient_document_inherit_form_view" model="ir.ui.view">
            <field name="name">ec.medical.patient.document.form.inherit.view</field>
            <field name="model">ec.medical.patient</field>
            <field name="inherit_id" ref="ecare_core.ec_patient_form_view"/>
            <field name="arch" type="xml">
                <div class="oe_button_box" position="inside">
                    <button class="oe_stat_button" name="document_view" type="object" icon="fa-list-ol">
                        <field string="Documents" name="document_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>