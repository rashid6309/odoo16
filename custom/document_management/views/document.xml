<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Explicit Search View -->

        <record id="document_management_search_view" model="ir.ui.view">
            <field name="name">document.management.search.view</field>
            <field name="model">document.management</field>
            <field name="arch" type="xml">
                <search string="Search Documents">
                    <field name="name"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Explicit Tree View -->

        <record id="document_management_tree_view" model="ir.ui.view">
            <field name="name">document.management.tree.view</field>
            <field name="model">document.management</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="attachment_ids" widget="many2many_binary"/>
                    <field name="patient_id"
                           invisible="1"
                           force_save="1"
                           attrs="{'invisible': [('patient_id', '=', False)]}"/>
                      <field name="issue_date"/>
                    <field name="expiry_date" />
                </tree>
            </field>
        </record>

