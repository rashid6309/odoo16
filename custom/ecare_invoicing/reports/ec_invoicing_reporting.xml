                    </div>
                </div>
                <div style="float: right; width:80%; margin-top:5%;">
                    <div class="row">
                        <div class="col-6 p-0 d-flex">
                            <div class="col-4 border-right text-right">
                                <b>Tel:</b>
                            </div>
                            <div class="col-7">
                                <ins><span class="text-field-value" t-esc="o.company_id.phone"/></ins>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 p-0 d-flex">
                            <div class="col-4 border-right text-right">
                                <b>Email:</b>
                            </div>
                            <div class="col-7">
                                <ins><span class="text-field-value" t-esc="o.company_id.email"/></ins>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 p-0 d-flex">
                            <div class="col-4 border-right text-right">
                                <b>Web site:</b>
                            </div>
                            <div class="col-7">
                                <ins><span class="text-field-value" t-esc="o.company_id.website"/></ins>
                            </div>
                        </div>
                    </div>

                    <!--                    <div class="row">-->
                    <!--                        <div class="col-8 p-0 d-flex">-->
                    <!--                            <div class="col-4 border-right text-right">-->
                    <!--                                <b>Address:</b>-->
                    <!--                            </div>-->
                    <!--                            <div class="col-7">-->
                    <!--                                <ins><span class="text-field-value" t-esc="(o.company_id.street or '') + ',' + (o.company_id.city or '')"/></ins>-->
                    <!--                            </div>-->
                    <!--                        </div>-->
                    <!--                    </div>-->
                </div>
            </div>
        </template>

