<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Credit note view only customers credit notes here -->
        <record id="account.view_out_credit_note_tree" model="ir.ui.view">
            <field name="name">account.move.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <!-- Custom -->
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">False</attribute>
                </xpath>

                <field name="activity_ids" position="replace"/>
                <field name="amount_untaxed_signed" position="replace"/>
            </field>
        </record>

        <!-- Inherited view as we need to have explicit views now -->
        <!-- &IMP; Any change in the invoice_form_view will reflect in here as well -->

        <record id="refund_view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="ref"/>
                </field>

                <xpath expr="//button[@name='action_reverse']" position="replace"/>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='fixed_amount_discount']" position="replace">
                    <field name="paid_subtotal"/>
                    <field name="refund_amount"/>
                    <field name="price_subtotal" invisible="1"/>
                </xpath>
            </field>
        </record>

        <!-- Move Refund -->
        <record id="account.action_move_out_refund_type" model="ir.actions.act_window">
            <field name="name">Refund Notes</field>
        </record>

        <record id="action_move_out_refund_tree" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account.view_out_credit_note_tree"/>
            <field name="sequence">10</field>
            <field name="act_window_id" ref="account.action_move_out_refund_type"/>
        </record>

        <record id="action_move_out_refund_form" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="ecare_invoicing.refund_view_move_form"/>
            <field name="sequence">20</field>
            <field name="act_window_id" ref="account.action_move_out_refund_type"/>
        </record>

    </data>
</odoo>
