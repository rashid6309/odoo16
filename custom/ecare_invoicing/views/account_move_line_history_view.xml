<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="patient_move_line_history_tree_view" model="ir.ui.view">
            <field name="name">Services</field>
            <field name="model">patient.account.move.line.history</field>
            <field name="arch" type="xml">
                <tree create="0" export="0" delete="0">
                    <field name="datetime"/>
                    <field name="patient_id"/>
                    <field name="move_id"/>
                    <field name="product_id"/>
                    <field name="invoice_type"/>
                    <field name="amount"/>
                    <field name="payment_state" widget="badge"/>
                    <button name="action_view_record"
                            string="View"
                            class="btn btn-primary"
                            type="object"/>
                </tree>
            </field>
        </record>

        <record id="patient_move_line_history_action" model="ir.actions.act_window">
            <field name="name">Services</field>
            <field name="res_model">patient.account.move.line.history</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>