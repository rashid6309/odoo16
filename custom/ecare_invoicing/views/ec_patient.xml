<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="ec_medical_patient_invoice_inherit" model="ir.ui.view">
            <field name="name">ec.medical.patient.invoice.inherit</field>
            <field name="model">ec.medical.patient</field>
            <field name="inherit_id" ref="ecare_core.ec_patient_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div[hasclass('oe_button_box')]" position="inside">

                    <button
                            name="action_open_invoice_line_history"
                            type="object"
                            groups="ecare_user_management.group_patient_menu"
                            class="oe_highlight"
                            string="Services"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>