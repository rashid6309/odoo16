<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_account_payment_register_inherited_form" model="ir.ui.view">
            <field name="name">account.payment.register.form.inherited</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_bank_id']" position="replace"/>
                <xpath expr="//field[@name='communication']" position="attributes">
                    <attribute name="attrs">{'readonly': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='amount']" position="attributes">
                    <attribute name="attrs">{'readonly': False}</attribute>
                </xpath>

                <!-- Payment method invisible Manual/Automatic -->
                <field name="payment_method_line_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="force_save">1</attribute>
                </field>
            </field>
        </record>

    </data>
</odoo>