<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Explicit Kanban View -->

        <record id="view_ec_repeat_consultation_kanban" model="ir.ui.view">
            <field name="name">ec.repeat.consultation.kanban</field>
            <field name="model">ec.repeat.consultation</field>
            <field name="arch" type="xml">
                <kanban create="0" class="oe_background_grey o_kanban_dashboard o_account_kanban">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card  w-100 repeat_kanban">
                                <t t-set="rec_id" t-value="record.id.raw_value"/>
                                <div class="row">
                                    <div class="d-flex" style="justify-content: space-between">
                                        <div>
                                            Consultation Date
                                            <b> / </b>
                                            <field name="repeat_date"/>
                                        </div>
                                        <div class="text-center font-weight-bold">
                                            <a data-bs-toggle="collapse"
                                               t-att-data-bs-target="'#family_history_section_' + rec_id" href="#">
                                                <i class="fa fa-bars fa-2x" aria-hidden="true"/></a>
                                        </div>
                                    </div>
                                    <hr/>


                                </div>
                                <div class="card-block mb-5 pl-4 collapse" t-att-id="'family_history_section_' + rec_id">
                                    <section>
                                        <div class="row">
                                            <div class="col-12 family-history">
                                                <div class="bd-example" data-example-id="">
                                                    <div id="accordion" role="tablist" aria-multiselectable="true">
                                                        <div class="oe_kanban_title">
                                                            <field name="question_two_label"/>
                                                            <h5><field name="question_two_choice"/></h5>
                                                        </div>
                                                        <div class="oe_kanban_title">
                                                            <field name="question_three_label"/>
                                                            <h5><field name="question_three_choice"/></h5>
                                                        </div>
                                                        <div class="oe_kanban_title">
                                                            <field name="question_four_label"/>
                                                        </div>
                                                        <table t-attf-class="o_group m-0 table_spacing_style">
                                                            <tbody>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_ultrasound_type" class="o_form_label">Ultrasound</label>
                                                                    </td>
                                                                    <td><field name="repeat_ultrasound_type"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_location_id" class="o_form_label">Location</label>
                                                                    </td>
                                                                    <td><field name="repeat_location_id"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_status" class="o_form_label">Status</label>
                                                                    </td>
                                                                    <td><field name="repeat_status"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_consultation_interaction" class="o_form_label">Interaction</label>
                                                                    </td>
                                                                    <td><field name="repeat_consultation_interaction"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="lmp_question_four" class="o_form_label">LMP</label>
                                                                    </td>
                                                                    <td><field name="lmp_question_four"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_cycle_day" class="o_form_label">Cycle Day</label>
                                                                    </td>
                                                                    <td><field name="repeat_cycle_day"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_date" class="o_form_label">Date</label>
                                                                    </td>
                                                                    <td><field name="repeat_date"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_seen_by" class="o_form_label">Seen by</label>
                                                                    </td>
                                                                    <td><field name="repeat_seen_by"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_consultation_with" class="o_form_label">Consultation with</label>
                                                                    </td>
                                                                    <td><field name="repeat_consultation_with"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_seen_with_other">Other Present</label>
                                                                    </td>
                                                                    <td><field name="repeat_seen_with_other"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_other_doctors_present" class="o_form_label">Other Doctors Present</label>
                                                                    </td>
                                                                    <td><field name="repeat_other_doctors_present"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_note" class="o_form_label">Note</label>
                                                                    </td>
                                                                    <td><field name="repeat_note" nolabel="1" placeholder="Add..."/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_examination_required" class="o_form_label">Examination Required</label>
                                                                    </td>
                                                                    <td><field name="repeat_examination_required"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_gpe" class="o_form_label">GPE</label>
                                                                    </td>
                                                                    <td><field name="repeat_gpe"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_thyroid" class="o_form_label">Thyroid</label>
                                                                    </td>
                                                                    <td><field name="repeat_thyroid"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_abdominal" class="o_form_label">Abdominal</label>
                                                                    </td>
                                                                    <td><field name="repeat_abdominal"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_breast" class="o_form_label">Breast</label>
                                                                    </td>
                                                                    <td><field name="repeat_breast"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_pelvic_examination_state" class="o_form_label">Pelvic Examination State</label>
                                                                    </td>
                                                                    <td><field name="repeat_pelvic_examination_state"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="inspection_only" class="o_form_label">Inspection Only</label>
                                                                    </td>
                                                                    <td><field name="inspection_only"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="p_v_only" class="o_form_label">P/V Only</label>
                                                                    </td>
                                                                    <td><field name="p_v_only"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="p_s_only" class="o_form_label">P/S Only</label>
                                                                    </td>
                                                                    <td><field name="p_s_only"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_findings_on_inspection" class="o_form_label">Findings on Inspection</label>
                                                                    </td>
                                                                    <td><field name="repeat_findings_on_inspection"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_valva_vaginal_exam" class="o_form_label">Valva/Vaginal Exam</label>
                                                                    </td>
                                                                    <td><field name="repeat_valva_vaginal_exam"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_cervix" class="o_form_label">Cervix</label>
                                                                    </td>
                                                                    <td><field name="repeat_cervix"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_uterus_and_adnexae" class="o_form_label">Uterus and Adnexae</label>
                                                                    </td>
                                                                    <td><field name="repeat_uterus_and_adnexae"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_swab_taken" class="o_form_label">Swab Taken</label>
                                                                    </td>
                                                                    <td><field name="repeat_swab_taken"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_hvs" class="o_form_label">HVS</label>
                                                                    </td>
                                                                    <td><field name="repeat_hvs"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_endocervical" class="o_form_label">Endocervical</label>
                                                                    </td>
                                                                    <td><field name="repeat_endocervical"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_no_swab_taken" class="o_form_label">No Swab Taken</label>
                                                                    </td>
                                                                    <td><field name="repeat_no_swab_taken"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_method_of_hvs" class="o_form_label">Method of HVS</label>
                                                                    </td>
                                                                    <td><field name="repeat_method_of_hvs"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_pap_smear_done" class="o_form_label">Pap Smear Done</label>
                                                                    </td>
                                                                    <td><field name="repeat_pap_smear_done"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_pipelle_sampling_done" class="o_form_label">Pipelle Sampling Done</label>
                                                                    </td>
                                                                    <td><field name="repeat_pipelle_sampling_done"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_other_findings" class="o_form_label">Other Findings</label>
                                                                    </td>
                                                                    <td><field name="repeat_other_findings"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="scan_required" class="o_form_label">Scan Required</label>
                                                                    </td>
                                                                    <td><field name="scan_required"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="repeat_ultrasound_type" class="o_form_label">Ultrasound Type</label>
                                                                    </td>
                                                                    <td><field name="repeat_ultrasound_type"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="tvs_uterus_tvs_size" class="o_form_label">Uterus TVS Size</label>
                                                                    </td>
                                                                    <td><field name="tvs_uterus_tvs_size"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="tvs_uterus_tvs_position" class="o_form_label">Uterus TVS Position</label>
                                                                    </td>
                                                                    <td><field name="tvs_uterus_tvs_position"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="tvs_uterus_tvs_normal" class="o_form_label">Uterus TVS Normal</label>
                                                                    </td>
                                                                    <td><field name="tvs_uterus_tvs_normal"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="tvs_uterus_tvs_fiobrid" class="o_form_label">Uterus TVS Fiobrid</label>
                                                                    </td>
                                                                    <td><field name="tvs_uterus_tvs_fiobrid"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="tvs_uterus_size_x" class="o_form_label">Uterus Size X</label>
                                                                    </td>
                                                                    <td><field name="tvs_uterus_size_x"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="tvs_uterus_size_y" class="o_form_label">Uterus Size Y</label>
                                                                    </td>
                                                                    <td><field name="tvs_uterus_size_y"/></td>
                                                                </tr>


                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="cyst_type" class="o_form_label">Cyst Type</label>
                                                                    </td>
                                                                    <td><field name="cyst_type"/></td>

                                                                </tr>

                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="tvs_rov" class="o_form_label">ROV</label>
                                                                    </td>
                                                                    <td><field name="tvs_rov"/></td>
                                                                    <td class="o_td_label">
                                                                        <label for="tvs_lov" class="o_form_label">LOV</label>
                                                                    </td>
                                                                    <td><field name="tvs_lov"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="o_td_label">
                                                                        <label for="tvs_other_text" class="o_form_label">Other Text</label>
                                                                    </td>
                                                                    <td><field name="tvs_other_text"/></td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </div>


                                <button name="action_set_working_consultation"
                                        type="object"
                                        string="Edit"
                                        class="btn btn-primary repeat_kanban_button"
                                        onclick="setTimeout(function() {
                                          var innerDiv = document.getElementById('repeat_consultation_section');
                                          if (innerDiv) {
                                            innerDiv.scrollIntoView({ behavior: 'smooth', block: 'start' });
                                          }
                                        }, 1000);"/>
                            </div>
                        </t>

                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Explicit Action -->
        <record id="repeat_consultation_action" model="ir.actions.act_window">
            <field name="name">Repeat Consultation</field>
            <field name="res_model">ec.repeat.consultation</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="target">current</field>
        </record>

    </data>
</odoo>
