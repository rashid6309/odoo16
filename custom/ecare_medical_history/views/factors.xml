<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="ec_medical_factors_tree_view" model="ir.ui.view">
            <field name="name">ec.medical.factors.tree.view</field>
            <field name="model">ec.medical.factors</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="type" required="1"/>
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </tree>
            </field>
        </record>

        <record id="ec_medical_factors_action" model="ir.actions.act_window">
            <field name="name">Factors</field>
            <field name="res_model">ec.medical.factors</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
        </record>


        <!-- Menu-item for Configuration -->

        <menuitem
            id="ec_medical_factors_menu"
            name="Factors"
            action="ec_medical_factors_action"
            parent="ec_medical_history_configuration"
            sequence="4800"/>

    </data>
</odoo>