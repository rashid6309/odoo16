<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Explicit Form View -->

        <record id="view_ec_medical_oi_ti_platform_cycle_form" model="ir.ui.view">
            <field name="name">ec.medical.oi.ti.platform.cycle.form</field>
            <field name="model">ec.medical.oi.ti.platform.cycle</field>
            <field name="arch" type="xml">
                <form>
                    <sheet class="container_cycle">
                        <div style="background-color: #95caff; padding: 3px; font-family: 'Roboto Mono',
                                monospace; border: none; outline: none; border-radius: 5px;">
                            Cycle Creation Date: <field name="create_date"/>
                            <h3 attrs="{'invisible': [('oi_ti_platform_status','not in',['abandoned'])]}"
                                style="padding: 3px; font-family: 'Roboto Mono',
                                        monospace;
                                        background:#aaff87 !important;
                                        border: none; outline: none;
                                         border-radius: 5px;width: 10rem;
                                        display: inline-block;float: right;">
                                Abandoned
                            </h3>
                            <h3 attrs="{'invisible': [('oi_ti_platform_status','not in',['completed'])]}"
                                style="padding: 3px; font-family: 'Roboto Mono',
                                        monospace;
                                        background:#aaff87 !important;
                                        border: none; outline: none;
                                         border-radius: 5px;width: 10rem;
                                        display: inline-block;float: right;">
                                Completed
                            </h3>
                        </div>
                        <group>
                            <field name="oi_ti_platform" readonly="1" invisible="1" force_save="1"/>
                            <field name="cycle_day" readonly="1" invisible="1" force_save="1"/>
                            <field name="oi_ti_platform_status" readonly="1" invisible="1" force_save="1"/>
                            <field name="cycle_timeline_id" readonly="1" invisible="1" force_save="1"/>
                            <field name="repeat_consultation_id" readonly="1" invisible="1" force_save="1"/>
                        </group>
                        <table cellspacing="0" cellpadding="0" class="oi_ti_attempt_table_style">
                            <tbody>
                                <tr style="height:15.75pt;">
                                    <td colspan="7" class="oi_ti_computed_values_td" style="background-color:#ffc5ff;">
                                        <p class="oi_ti_action_btn" style="text-align: left;"><strong><span>OUTCOME: <field name="ova_outcome"/></span></strong></p>
                                    </td>
                                </tr>
                                <tr style="height:15.75pt;" attrs="{'invisible': [('oi_ti_platform_status','not in',['abandoned'])]}">
                                    <td colspan="7" class="oi_ti_computed_values_td" style="background-color:#c0e0ff;">
                                        <p class="oi_ti_action_btn" style="text-align: left;"><strong>Abandoned Comments: </strong><field name="abandoned_comments" readonly="1"/></p>
                                    </td>
<!--                                    <td colspan="6" class="oi_ti_computed_values_td" style="background-color:#c0e0ff;">-->
<!--                                        <p class="oi_ti_action_btn" style="text-align: left;"><strong><field name="abandoned_comments" readonly="1"/></strong></p>-->
<!--                                    </td>-->
                                </tr>

                                <!--                                Exit Buttons-->

                                <tr style="height:15.75pt;">
                                    <td class="oi_ti_computed_values_td" style="background-color:#dceeff;">
                                        <p class="oi_ti_action_btn"><strong><span>Trigger regimen</span></strong></p>
                                    </td>
                                    <td class="oi_ti_heading_td">
                                        <p class="oi_ti_action_btn"><strong><field name="trigger_regimen"/></strong></p>
                                    </td>
                                    <td class="oi_ti_heading_td">
                                        <p class="oi_ti_action_btn"><strong><span>Insemination</span></strong></p>
                                    </td>
                                    <td class="oi_ti_heading_td">
                                        <p class="oi_ti_action_btn"><strong><field name="insemination"/></strong></p>
                                    </td>
                                    <td colspan="2" class="oi_ti_heading_td">
                                        <p class="oi_ti_action_btn"><strong><span>IUI attempt</span></strong></p>
                                    </td>
                                    <!--                                    <td class="oi_ti_heading_td">-->
                                    <!--                                        <p class="oi_ti_action_btn"><strong><span>Luteal phase support</span></strong></p>-->
                                    <!--                                    </td>-->
                                </tr>
                                <tr style="height:26.25pt;">
                                    <td class="oi_ti_computed_values_td" style="background-color:#dceeff;">
                                        <p class="oi_ti_action_btn"><strong><span>Trigger date &amp; time</span></strong></p>
                                    </td>
                                    <td class="oi_ti_heading_td">
                                        <p style="margin-top:0pt; margin-bottom:0pt; text-align:center; line-height:115%; widows:0; orphans:0; font-size:8pt;"><span><field name="trigger_date_time"/></span></p>
                                    </td>
                                    <td class="oi_ti_heading_td">
                                        <p class="oi_ti_action_btn"><strong><span>Indication for IUI</span></strong></p>
                                    </td>
                                    <td class="oi_ti_heading_td">
                                        <p class="oi_ti_action_btn"><strong><field name="indication_of_iui" attrs="{'required': [('insemination', '=', 'frozen_thawed_iui')]}"/></strong></p>
                                    </td>
                                    <td colspan="2" class="oi_ti_heading_td">
                                        <p class="oi_ti_action_btn"><strong><span><field name="iui_attempt_count" attrs="{'required': [('insemination', '=', 'frozen_thawed_iui')]}"/></span></strong></p>
                                    </td>
                                    <!--                                    <td class="oi_ti_heading_td">-->
                                    <!--                                        <p class="oi_ti_action_btn"><strong><field name="luteal_phase_support"/></strong></p>-->
                                    <!--                                    </td>-->
                                </tr>
                                <!--                                2nd Trigger-->
                                <tr style="height:15.75pt;" attrs="{'invisible': [('oi_ti_platform','not in',['2nd_trigger','luteal_phase'])]}">
                                    <td class="oi_ti_computed_values_td" style="background-color:#dceeff;">
                                        <p class="oi_ti_action_btn"><strong><span>2nd Trigger regimen</span></strong></p>
                                    </td>
                                    <td class="oi_ti_heading_td">
                                        <p class="oi_ti_action_btn"><strong><field name="second_trigger_regimen"/></strong></p>
                                    </td>
                                </tr>
                                <tr style="height:26.25pt;" attrs="{'invisible': [('oi_ti_platform','not in',['2nd_trigger','luteal_phase'])]}">
                                    <td class="oi_ti_computed_values_td" style="background-color:#dceeff;">
                                        <p class="oi_ti_action_btn"><strong><span>2nd Trigger date &amp; time</span></strong></p>
                                    </td>
                                    <td class="oi_ti_heading_td">
                                        <p style="margin-top:0pt; margin-bottom:0pt; text-align:center; line-height:115%; widows:0; orphans:0; font-size:8pt;"><span><field name="second_trigger_date_time"/></span></p>
                                    </td>
                                </tr>
                                <!--                                End 2nd trigger-->
                                <tr style="height:15.75pt;" attrs="{'invisible': [('oi_ti_platform','not in',['luteal_phase'])]}">
                                    <td class="oi_ti_heading_td">
                                        <p class="oi_ti_action_btn"><strong><span>Luteal phase support</span></strong></p>
                                    </td>
                                </tr>
                                <tr style="height:26.25pt;" attrs="{'invisible': [('oi_ti_platform','not in',['luteal_phase'])]}">
                                    <td class="oi_ti_heading_td">
                                        <p class="oi_ti_action_btn"><strong><field name="luteal_phase_support"/></strong></p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <field name="oi_ti_platform_attempt_ids" mode="kanban"/>

                    </sheet>
                    <div style="padding: 1rem; background: white; display: flex;" attrs="{'invisible': [('oi_ti_platform_status','in',['abandoned', 'completed'])]}">
                        <!--                    <button string="Save" special="save" class="btn-primary"/>-->
                        <!--                    <button string="Discard" class="btn-secondary" special="cancel"/>-->
                        <!--                    <button string="Delete" type="object" class="btn-secondary" name="unlink"/>-->
                        <button
                                name="action_create_oi_ti_platform_attempt"
                                class="oi_ti_navbar_btn"
                                type="object"
                                confirm="Do you really want to create a new visit?"
                                string="ADD NEW FOLLOW UP"/>
                        <button
                                name="action_2nd_trigger_attempt"
                                class="oi_ti_navbar_btn"
                                type="object"
                                attrs="{'invisible': [('oi_ti_platform','in',['2nd_trigger','luteal_phase'])]}"
                                string="SECOND TRIGGER"/>
                        <button
                                name="action_start_luteal_phase_attempt"
                                class="oi_ti_navbar_btn"
                                attrs="{'invisible': [('oi_ti_platform','in',['luteal_phase'])]}"
                                type="object"
                                string="START LUTEAL PHASE"/>
                        <button
                                name="action_abandoned_attempt"
                                class="oi_ti_navbar_btn"
                                type="object"
                                attrs="{'invisible': [('oi_ti_platform','in',['luteal_phase'])]}"
                                string="ABANDON ATTEMPT"/>
                        <button
                                name="action_complete_attempt"
                                class="oi_ti_navbar_btn"
                                type="object"
                                string="COMPLETE ATTEMPT"/>
                    </div>
                    <!--                    <field name="html_table" invisible="1"/>-->
                    <script>
                        var elements = document.querySelectorAll('.o_form_editable');
                        elements.forEach(function(element) {
                        element.classList.remove('d-flex');
                        });

                    </script>
                </form>

            </field>
        </record>



