<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="patient_timeline_tree_view" model="ir.ui.view">
            <field name="name">patient.timeline.tree.view</field>
            <field name="model">ec.patient.timeline</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="patient_id"/>
                </tree>
            </field>
        </record>

        <!-- Form view (IN HTML) -->
        <record id="patient_timeline_form_view" model="ir.ui.view">
            <field name="name">patient.timeline.form.view</field>
            <field name="model">ec.patient.timeline</field>
            <field name="arch" type="html">
                <form>
                    <header>
                        <button name="action_open_patient_time_view"
                                type="object"
                                context="{'search_default_patient':id}"
                                string="First Consultation"
                                class="btn btn-primary"/>

                    </header>
                    <group>
                        <field name="name"/>
                        <field name="patient_id"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Explicit action -->
        <record id="patient_timeline_action" model="ir.actions.act_window">
            <field name="name">Patient Timeline</field>
            <field name="res_model">ec.patient.timeline</field>
            <field name="context">{'default_patient_id': 'id'}</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>