<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>


        <record id="ec_patient_timeline_wizard_form_view" model="ir.ui.view">
            <field name="name">ec.patient.timeline.wizard.form.view</field>
            <field name="model">ec.patient.timeline.wizard</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="patient" options="{'no_open': True, 'no_create': True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="create_timeline"
                                string="Create Timeline"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-default"
                                special="cancel"
                                data-hotkey="z" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- Explicit Actions -->

        <record id="ec_patient_timeline_wizard_action" model="ir.actions.act_window">
            <field name="name">Create Timeline</field>
            <field name="res_model">ec.patient.timeline.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>