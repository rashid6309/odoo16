<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ec_medical_patient_procedure_form" model="ir.ui.view">
            <field name="name">ec.medical.patient.procedures.form</field>
            <field name="model">ec.patient.procedures</field>
            <field name="arch" type="xml">
                <form string="Surgical Detail" edit="true" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="female_consultation_id" invisible="1" force_save="1"/>
                                <field name="male_consultation_id" invisible="1" force_save="1"/>
                                <field name="details" placeholder="Details..."/>
                                <field name="date_on" placeholder="Date On"/>
                                <field name="surgical_year_id"
                                       options="{'no_create': True, 'no_open': True, 'no_quick_create': True}"
                                       placeholder="Year.."/>
                                <!-- <field name="procedure_id" placeholder="Date ON"/>-->
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ec_medical_patient_procedure_tree" model="ir.ui.view">
            <field name="name">ec.medical.patient.procedures.tree</field>
            <field name="model">ec.patient.procedures</field>
            <field name="arch" type="xml">
                <tree string="Surgical Detail" edit="bottom" create="false">
                    <field name="female_consultation_id" invisible="1" force_save="1"/>
                    <field name="male_consultation_id" invisible="1" force_save="1"/>
                    <field name="details" placeholder="Details..."/>
                    <field name="date_on" placeholder="Date On"/>
                    <field name="surgical_year_id" placeholder="Year.."/>
                </tree>
            </field>
        </record>

        <record id="ec_medical_patient_procedure_kanban" model="ir.ui.view">
            <field name="name">ec.medical.patient.procedures.kanban</field>
            <field name="model">ec.patient.procedures</field>
            <field name="arch" type="xml">
                <kanban create="false">
                    <field name="details"/>
                    <field name="date_on"/>
                    <templates>
                        <t t-name="kanban-box" style="width:40mm; height:70mm;">
                            <div t-attf-class="oe_kanban_global_click">
                                <table t-attf-class="o_group">
                                    <tbody>
                                        <tr>
                                            <td class="o_td_label">
                                                <label class="o_form_label" for="details">Details:</label>
                                            </td>
                                            <td>
                                                <field name="details"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="o_td_label">
                                                <label class="o_form_label" for="date_on">Date On:</label>
                                            </td>
                                            <td>
                                                <field name="date_on"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="ec_medical_procedures_create_action" model="ir.actions.act_window">
            <field name="name">Surgical Detail</field>
            <field name="res_model">ec.patient.procedures</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click to add a new surgical detail.
                </p>
            </field>
        </record>
    </data>
</odoo>