<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_out_invoice_tree" model="ir.ui.view">
            <field name="name">account.move.tree.view.due.cases</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create">False</attribute>
                </xpath>
            </field>
        </record>

        <record id="action_move_draft_type" model="ir.actions.act_window">
            <field name="name">Due Cases</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_out_invoice_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', 'in', ('out_invoice', 'out_refund')),
                                  ('payment_state', '=', 'not_paid')]
            </field>
            <field name="context">{'default_move_type': 'out_refund'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a customer invoice
                </p><p>
                Create invoices, register payments and keep track of the discussions with your customers.
            </p>
            </field>
        </record>
    </data>
</odoo>