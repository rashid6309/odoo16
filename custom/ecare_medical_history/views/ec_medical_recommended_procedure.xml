<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_patient_recommended_procedure_tree" model="ir.ui.view">
            <field name="name">ec.medical.recommended.procedure.tree</field>
            <field name="model">ec.medical.recommended.procedure</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="ec_medical_recommended_procedures_action" model="ir.actions.act_window">
            <field name="name">Recommended Procedures</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ec.medical.recommended.procedure</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="ec_medical_recommended_procedures_menu"
            name="Recommended Procedures"
            action="ec_medical_recommended_procedures_action"
            parent="ec_medical_history_configuration"
            sequence="5010"/>

    </data>
</odoo>