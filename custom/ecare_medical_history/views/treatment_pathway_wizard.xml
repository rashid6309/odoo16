<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>


        <record id="ec_medical_treatment_pathway_wizard_form_view" model="ir.ui.view">
            <field name="name">ec.medical.treatment.pathway.wizard.form.view</field>
            <field name="model">ec.medical.treatment.pathway.wizard</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="message" readonly="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button special="save"
                                string="I understand"
                                type="object"
                                class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Explicit Actions -->

        <record id="ec_medical_treatment_pathway_wizard_action" model="ir.actions.act_window">
            <field name="name">Message</field>
            <field name="res_model">ec.medical.treatment.pathway.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>