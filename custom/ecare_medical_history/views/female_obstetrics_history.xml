<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="ec_medical_obstetrics_history_tree_view" model="ir.ui.view">
            <field name="name">ec.obstetrics.history.tree</field>
            <field name="model">ec.obstetrics.history</field>
            <field name="arch" type="xml">
                <tree editable="bottom" export_xlsx="false">
                    <field name="patient_id"
                           invisible="1"
                           readonly="1"
                           force_save="1"/>
                    <field name="baby_name"/>
                    <field name="alive" required="1"/>
                    <field name="type_of_conception"/>
                    <field name="mode_of_delivery" required="1"/>
                    <field name="duration_of_pregnancy" required="1" string="Dur. of Preg"/>
                    <field name="year" options="{'no_open': True, 'no_create': True}" invisible="1"/>
                    <field name="date_of_birth" required="1"/>
                    <field name="age"/>
                    <field name="birth_place"/>
                    <field name="complication_pregnancy" class="truncate_text"/>
                    <field name="labour_history"/>
                    <field name="complication_delivery" class="truncate_text"/>
                    <field name="complication_post_partum" class="truncate_text"/>
                    <field name="gender"/>
                    <field name="weight"/>
                    <field name="health"/>
                    <field name="child_health_issues" class="truncate_text"/>
                    <field name="feed"/>
                    <field name="other_indications" class="truncate_text"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="ec_obstetrics_history_action" model="ir.actions.act_window">
            <field name="name">Obstetrics History</field>
            <field name="res_model">ec.obstetrics.history</field>
            <field name="view_mode">tree</field>
        </record>


    </data>
</odoo>