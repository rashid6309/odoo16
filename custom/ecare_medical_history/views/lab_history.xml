<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Kanban view -->
        <record id="ec_lab_history_kanban_view" model="ir.ui.view">
            <field name="name">lab.history.kanban.view</field>
            <field name="model">ec.lab.history</field>
            <field name="arch" type="xml">

                <kanban create="false">
                    <field name="name"/>
                    <field name="date"/>

                    <templates>
                        <t t-name="kanban-box" style="width:40mm; height:70mm;">
                            <div t-attf-class="oe_kanban_global_click">
                                <span>Name:</span>
                                <field name="name"/>
                                <br/>
                                <span>Date:</span>
                                <field name="date"/>
                            </div>
                        </t>
                    </templates>
                </kanban>

            </field>
        </record>

        <!-- Explicit Form Action -->

        <record id="ec_lab_history_form_view" model="ir.ui.view">
            <field name="name">lab.history.form.view</field>
            <field name="model">ec.lab.history</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="filename" invisible="True" force_save="True"/>
                        <field name="attachment_id" required="1" filename="filename"/>
                        <!--                        <field name="attachment_ids" widget="many2many_binary"/>-->
                    </group>
                </form>
            </field>
        </record>

        <!-- Explicit Tree Action -->

        <record id="ec_lab_history_tree_view" model="ir.ui.view">
            <field name="name">lab.history.tree.view</field>
            <field name="model">ec.lab.history</field>
            <field name="arch" type="xml">
                <tree create="0" editable="bottom">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="attachment_id" widget="binary" readonly="1" filename="filename"/>
                </tree>
            </field>
        </record>

        <!-- Explicit action -->
        <record id="ec_lab_history_action" model="ir.actions.act_window">
            <field name="name">Lab History</field>
            <field name="res_model">ec.lab.history</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>