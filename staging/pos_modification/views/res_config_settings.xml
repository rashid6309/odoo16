<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.pos.modification</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="after">
                <h2 class="mt16">POS Modification</h2>
                <div class="row mt16 o_settings_container" id="pos_modification">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="pos_discount_fx" string="POS Fixed Discount"/>
                            <div class="text-muted">
                                <field name="pos_discount_fx"/>
                            </div>
                        </div>

                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="pos_custom_analytic_account_id" string="Custom Analytic Account"/>
                            <div class="text-muted">
                                <field name="pos_custom_analytic_account_id"/>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>